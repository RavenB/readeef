{{ define "title" }} {{ __ "Readeef: Your feed reader" .base.lang }} {{ end }}
{{ define "imports" }}
    <script src="/dist/platform/platform.js"></script>

    <link rel="import" href="/dist/font-roboto/roboto.html">

    <link rel="import" 
      href="/dist/core-toolbar/core-toolbar.html">
    <link rel="import" 
      href="/dist/core-menu/core-menu.html">
    <link rel="import" 
      href="/dist/core-item/core-item.html">
    <link rel="import" 
      href="/dist/core-header-panel/core-header-panel.html">
    <link rel="import" 
      href="/dist/core-drawer-panel/core-drawer-panel.html">
    <link rel="import" 
      href="/dist/core-icons/core-icons.html">
    <link rel="import" 
      href="/dist/paper-icon-button/paper-icon-button.html">
{{ end }}

{{ define "styles" }}
<style>
    core-drawer-panel:not([narrow]) #navicon {
      display: none;
    }
</style>
{{ end }}
{{ define "body-attrs" }} fullbleed unresolved {{ end }}

{{ define "content" }}
    <core-drawer-panel id="drawer-panel">

      <core-header-panel drawer>
        <core-toolbar id="navheader'">
          <span>Menu</span>
        </core-toolbar>
        <core-menu>
          <core-item label="One"></core-item>
          <core-item label="Two"></core-item>
        </core-menu>
       </core-header-panel>

      <core-header-panel main>
        <core-toolbar id="mainheader">
          <paper-icon-button 
            id="navicon" icon="menu"></paper-icon-button>
          <span flex>Title</span>
        </core-toolbar>
        <div class="content">
            TEST
        </div>
      </core-header-panel>

    </core-drawer-panel>
{{ end }}

{{ define "scripts" }}
<script>
    document.addEventListener('polymer-ready', function() {
        var navicon = document.getElementById('navicon'),
            drawerPanel = document.getElementById('drawer-panel');

        navicon.addEventListener('click', function() {
            drawerPanel.togglePanel();
        });
    });
</script>
{{ end }}
